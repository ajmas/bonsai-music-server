{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es6",
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "paths": {
    "*": [
      "node_modules/*",
      "src/types/*"
    ]
  }
}
